@model PWA_Test.Models.Comparable
@{
    ViewBag.Title = "Comparable Property Details";
}


<div class="overall">
    @*<p>
            <a style="margin-top:-100px" class="casesbtn" href="~/Map" target="_blank">Map</a>
        </p>*@
    <form style="margin-top:-100px" action="@Url.Action("Index", "Map", new { address =  Model.addressLine, postcode = Model.postcode })" method="POST" target="_blank">
        <input class="casesbtn" type="submit" value="Map" />
    </form>

   

    <div class="bar1">Comparable Property Details - @ViewBag.Address<span class="minustable glyphicon glyphicon-minus" style="color: white; font-size: 14px; float: right; margin-right: 10px; margin-top: 3px;"></span></div>

    <div class="column1">
        <div class="size backtolist">
            <p class="title2" style="font-size: 28px;">Address</p>
            <p class="value" style="font-size:18px; padding-left:75px;padding-right: 75px">@Html.DisplayFor(model => model.addressLine), @Html.DisplayFor(model => model.postcode)</p>
        </div>
        <img class="imghouse" style="width: 100%; text-align: center;position: absolute;left: 0;bottom: 0;border-bottom-left-radius:25px;" src=@Html.DisplayFor(model => model.image) alt="Property image" />


    </div>
    <div class="column2">
        <div class="row">
            <div class="size left">
                <p class="title2">Comparison Score</p>
                <p class="value">@Html.DisplayFor(model => model.compScore)</p>
            </div>
            <div class="size right">
                <p class="title2">Number of Bedrooms</p>
                <p class="value">@Html.DisplayFor(model => model.bedrooms)</p>
            </div>
        </div>
        <div class="row">
            <div class="size left1">
                <p class="title2">Property Type</p>
                <p class="value">@Html.DisplayFor(model => model.propType)</p>
            </div>
            <div class="size right1">
                <p class="title2">Property Style</p>
                <p class="value">@Html.DisplayFor(model => model.propStyle)</p>
            </div>
        </div>
        <div class="row">
            <div class="size left">
                <p class="title2">Floor Area</p>
                <p class="value">@Html.DisplayFor(model => model.floorArea)</p>
            </div>
            <div class="size right">
                <p class="title2">Asking Price</p>
                <p class="value">@Html.DisplayFor(model => model.askingPrice)</p>
            </div>
        </div>
        <div class="row">
            <div class="size left1">
                <p class="title2">Right Move Status</p>
                <p class="value">@Html.DisplayFor(model => model.rmStatus)</p>
            </div>
            <div class="size right1">
                <p class="title2">Distance</p>
                <p class="value">@Html.DisplayFor(model => model.distance)</p>
            </div>
        </div>
        <div class="row">
            <div class="size left">
                <p class="title2">Year Built</p>
                <p class="value">@Html.DisplayFor(model => model.yearBuilt)</p>
            </div>
            <div class="right" style="border-bottom-right-radius: 25px;">
                <p class="title casesbtn" style="width: 80%; margin-left:10%; margin-top:10px; font-size:16px; padding-left:30px;padding-right: 30px;">
                    @Html.ActionLink("Back to comparables list", "Index", new { id = Convert.ToInt32(ViewData["Id"]) })
                </p>
            </div>
        </div>


    </div>
</div>

@Scripts.Render("~/bundles/jquery")


<script>

    $(document).on({
        mouseenter: function () {
            $(this).children().css('transform', 'scale(1.1)')
            $(this).children().css('transition', '0.4s')
        },
        mouseleave: function () {
            $(this).children().css('transform', 'scale(1)')
        }
    }, ".size");
</script>